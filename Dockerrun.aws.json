{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "node-app",
      "host": {
        "sourcePath": "/var/app/current/php-app"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    },
    {
      "name": "mongo",
      "host": {
        "sourcePath": "/var/data/mongo"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "nikolaik/python-nodejs:latest",
      "environment": [
        {
          "name": "Container",
          "value": "NodeJS"
        }
      ],
      "links": [
        "database"
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "node-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    },
    {
      "name": "database",
      "image": "mongo",
      "environment": [
        {
          "name": "Container",
          "value": "MongoDB"
        }
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": ".",
          "containerPath": "/var/data",
          "readOnly": true
        }
      ]
    }
  ]
}
